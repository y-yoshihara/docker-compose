# http://editorconfig.org

root = true

[*]
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

# Docstrings and comments use max_line_length = 79
[*.py]
max_line_length = 99
indent_size = 4

[*.yml]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
